<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E7gzli</title>
    <link href="/BookNow.css" rel="stylesheet">
    <script src="/script/BookNow.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Domine:wght@400..700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link rel="icon" href="/materials/Icon.png" type="image/x-icon">



<script>
    function calculatePayment() {
        const price3 = parseInt(document.getElementById('price3').innerText);
        const price2 = parseInt(document.getElementById('price2').innerText);
        const price1 = parseInt(document.getElementById('price1').innerText);

        const no3 = parseInt(document.getElementById('NO3').value);
        const no2 = parseInt(document.getElementById('NO2').value);
        const no1 = parseInt(document.getElementById('NO1').value);

        const total = (price3 * no3) + (price2 * no2) + (price1 * no1);

        document.getElementById('Paymenth1').innerText = `Total = ${total} EGP`;
    }
</script>



</head>
<body>



    <div class="navbar">
        <div class="LOGO">
            <span class="material-symbols-outlined">
                local_activity
                </span>
            <h1>E7gzli</h1>
        </div>
          <div class="left-A">
          <a  href="/index">Home</a>
          <a  href="/Browse">Browse</a>
          <a  href="/Store">Store</a>
         </div>

         <div class="R-A">
            <a id="loginbutton"  href="login">Login</a>
           </div>
    </div>





    
    <% event2.forEach(function(event2) { %>
        <% if (event2.id === event.id) { %>
            <div class="Area">
                <div class="stadium">
                <% if (event2.type = '1') { %>
                    <img src="/materials/stadium-right.svg" alt="Match Image">
                <% } else if (event2.type = '2') { %>
                    <img src="/materials/stadium-right.svg" alt="Event Image">
                <% } %>
    
                <div class="cat">
                    <label id="Cat3" for="cat3">CAT 3: <span id="price3"><%= event2.cat3price %></span> EGP</label>
                    <select name="NUMBER" id="NO3" onchange="calculatePayment()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
    
                <div class="cat">
                    <label id="Cat2" for="cat2">CAT 2: <span id="price2"><%= event2.cat2price %></span> EGP</label>
                    <select name="NUMBER" id="NO2" onchange="calculatePayment()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
    
                <div class="cat">
                    <label id="Cat1" for="cat1">CAT 1: <span id="price1"><%= event2.cat1price %></span> EGP</label>
                    <select name="NUMBER" id="NO1" onchange="calculatePayment()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div class="Payment">
                    <h1 id="Paymenth1">Total = 0 EGP</h1>
                </div>
            </div>
        
        
                <div class="Buttons">
                <a href="/Browse" id="CN">Cancel</a>
                <button id="BN" >Buy Now</button>
                </div>
        
        
                <div class="PaymentStyle">
                    <label id="PS" for="PS">Payment Style :</label>
                    <select name="Payment" id="PS"  onchange="ps(this.value)">
                        <option disabled selected></option>
                        <option value="c">Cash</option>
                        <option value="v">Visa</option>
                    </select>   
                    <div class="output" id="output"></div>
                </div>

            </div>
        <% } %>
    <% }); %>
</div>

    
        

</body>
</html>