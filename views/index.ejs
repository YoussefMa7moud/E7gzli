            <h3>Get your e-ticket, arrive at the venue, and have fun!</h3>
        </div>



    </div>



    <section id="cacc">
        <div class="creat-acc">
            <div>
                <h1>Create Account</h1>
            </div>
            <form id="signup-form" action="/signup" method="post">
                <div class="Main_holder">
                    <div class="holder_left">
                        <div class="holder">
                            <h3>Full Name: </h3>
                            <input class="field_text" type="text" id="full_name" name="Fullname" placeholder="&nbsp &nbsp &nbsp FIRST SECOND NAME">
                        </div>
                        <div class="holder">
                            <h3>Email: &nbsp &nbsp &nbsp &nbsp </h3>
                            <input class="field_text" type="Email" id="email" name="email" placeholder="&nbsp &nbsp &nbsp example@example.com">
                        </div>
                        <div class="holder">
                            <h3>Password: &nbsp</h3>
                            <input class="field_text" type="password" id="pass" name="Password" placeholder="&nbsp &nbsp &nbsp************">
                        </div>
                    </div>
                    <div class="holder_right">
                        <div class="holder">
                            <h3>Phone Number:</h1>
                                <input class="field_text" type="number" id="phone_num" name="PhoneNumber" placeholder="&nbsp&nbsp&nbsp +020123456789">
                        </div>
                        <div class="holder">
                            <h3>Date of Birth: </h3>
                            <select id="day" name="day" required>
                                <option value="">Day</option>
                                <script>
                                    for (let i = 1; i <= 31; i++) {
                                        document.write('<option value="' + i + '">' + i + '</option>');
                                    }
                                </script>
                            </select>
                            <select id="month" name="month" required>
                                <option value="">Month</option>
                                <script>
                                    const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                                    for (let i = 1; i <= 12; i++) {
                                        document.write('<option value="' + i + '">' + months[i - 1] + '</option>');
                                    }
                                </script>
                            </select>
                            <select id="year" name="year" required>
                                <option value="">Year</option>
                                <script>
                                    const currentYear = new Date().getFullYear();
                                    for (let i = 1900; i <= currentYear; i++) {
                                        document.write('<option value="' + i + '">' + i + '</option>');
                                    }
                                </script>
                            </select><br><br>
                        </div>
                        <div class="holder">
                            <h3>Gender: </h1>
                                <input type="radio" name="Gender" value="male" required>
                                <h3> Male </h3>
                                <input type="radio" name="Gender" value="female" required>
                                <h3> Female </h3>
                        </div>
                    </div>
                </div>
                <div class="holder_words">
                    <h3>By clicking on create account you Agree on our terms and conditions</h1>
                        <h3>You will receive an email to verify your account</h1>
                </div>
                <button type="submit">Create Account</button>
            </form>
            
            </div>
    </section>

    <div class="contact-container">
        <div class="contactus">
            <h1>Contact Us</h1>
            <h2>Questions? we're here to help</h2>
            <input type="text" placeholder="Your Message">
            <button>Send Message</button>
        </div>
    </div>











</body>

